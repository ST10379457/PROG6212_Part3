@page
@model ST10379457_PROG6212_POE.Pages.AcademicManagerModel
@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<h2>Pending Claims</h2> <!--(W3schools, 2024)-->

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>User ID</th>
            <th>Module Name</th>
            <th>Module Code</th>
            <th>Class Group</th>
            <th>Hours Worked</th>
            <th>Claim Amount</th>
            <th>Status</th>
            <th>Date of Submission</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.ClaimsList1)
        {
            <tr>
                <td>@claim.ClaimID</td>
                <td>@claim.UserID</td>
                <td>@claim.ModuleName</td>
                <td>@claim.ModuleCode</td>
                <td>@claim.ClassGroup</td>
                <td>@claim.Hours</td>
                <td>@claim.ClaimAmount</td>
                <td>@claim.Status</td>
                <td>@claim.DateOfSubmission</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="claimID" value="@claim.ClaimID" />
                        <button type="submit" asp-page-handler="Accept" class="btn btn-success">Accept</button>
                        <button type="submit" asp-page-handler="Reject" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }<!--(W3schools, 2024)-->
    </tbody>
</table>
